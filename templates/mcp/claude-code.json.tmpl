{
  "mcpServers": {
    "context7": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp@latest"],
      "env": {
        "CONTEXT7_API_KEY": "{{CONTEXT7_API_KEY}}"
      },
      "description": "Context7 server for documentation lookups"
    },
    "serena": {
      "command": "uvx",
      "args": ["serena", "--project={{PROJECT_PATH:./}}"],
      "description": "Serena server for intelligent code navigation"
    },
    "basic-memory": {
      "command": "uvx",
      "args": ["basic-memory", "mcp"],
      "description": "Persistent memory for cross-session knowledge"
    }
  },
  "projectConfig": {
    "name": "{{PROJECT_NAME:my-project}}",
    "stack": "{{STACK:generic}}",
    "version": "1.0.0"
  }
}
